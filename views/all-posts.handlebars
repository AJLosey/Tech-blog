<div class="posts">
    <ul>
        {{#each posts as |post|}}
        <li>
            <div class="card" onclick="window.location='/post/{{post.id}}';">
                <div class="card-header">
                    <h2>{{post.title}}</h2>
                </div>
                <div class="card-body">
                    {{post.body}}
                </div>
                <div>
                    <div>
                        user# {{post.userId}}
                    </div>
                    <div>
                        posted on {{post.date}}
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>