<div class="post card">
    <div class="card-header">
        <h2>Create Post</h2>
    </div>
    <div id="create-post" role="tabpanel">
        <form id="new-post-form" class="card-body">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="post-title" />
            </div>
            <div>
                <label for="post-body">Write your post here</label>
                <input type="text" id="post-body" />
            </div>
            <button type="submit" id="post-btn" class="btn">Post!</button>
        </form>
    </div>

    <script src="/js/new.js"></script>